<Entity tags="hittable,teleportable_NOT,item_physics,item_pickup,seed_b" >
	<Base file="data/entities/base_item_projectile.xml" />

	<!-- physical presence -->
	
	<PhysicsBodyComponent 
		_tags="enabled_in_world"
		uid="1" 
		allow_sleep="1" 
		angular_damping="0" 
		fixed_rotation="0" 
		is_bullet="1" 
		linear_damping="0"
		auto_clean="0"
		on_death_leave_physics_body="1"
		hax_fix_going_through_ground="1"
	></PhysicsBodyComponent>
	
	<PhysicsImageShapeComponent 
		body_id="1"
		centered="1"
		image_file="data/items_gfx/goldnugget_9px.png"
		material="gem_box2d_red_float"
	></PhysicsImageShapeComponent>
	
	<PhysicsThrowableComponent
		max_throw_speed="180"
		throw_force_coeff="1.5"
	></PhysicsThrowableComponent>

	<VelocityComponent
		_tags="enabled_in_world"
	></VelocityComponent>

	<!-- other -->

	<GameEffectComponent 
		_tags="enabled_in_hand"
		effect="REMOVE_FOG_OF_WAR"
		frames="-1"
	></GameEffectComponent>

	<!-- item -->

	<SpriteComponent
		_tags="enabled_in_hand"
		_enabled="0"
		offset_x="4"
		offset_y="4"
		image_file="data/items_gfx/sunseed_2.png"
	></SpriteComponent>
	
	<SpriteComponent
		_tags="enabled_in_hand,enabled_in_world"
		_enabled="1"
		offset_x="49"
		offset_y="49"
		image_file="data/particles/fog_of_war_hole_big.png"
		smooth_filtering="1"
		fog_of_war_hole="1"
	></SpriteComponent>

	<ItemComponent
		_tags="enabled_in_world"
		item_name="$item_seed_c"
		ui_description="$itemdesc_seed_c"
		ui_sprite="data/ui_gfx/items/sunseed_2.png"
		max_child_items="0"
		is_pickable="1"
		is_equipable_forced="1"
		preferred_inventory="QUICK"
	></ItemComponent>

	<UIInfoComponent
		_tags="enabled_in_world"
		name="$item_seed_c">
	</UIInfoComponent>
	
	<AbilityComponent
		ui_name="$item_seed_c"
		throw_as_item="1"
		><gun_config
			deck_capacity="0"
		></gun_config>
	</AbilityComponent>
	
	<AreaDamageComponent
		aabb_min.x="-48" 
		aabb_min.y="-48" 
		aabb_max.x="48" 
		aabb_max.y="48" 
		damage_per_frame="0.06"
		update_every_n_frame="1"
		entities_with_tag="mortal"
		death_cause="$damage_sun"
		damage_type="DAMAGE_CURSE"
		>
	</AreaDamageComponent>
	
	<MagicConvertMaterialComponent
		_tags="enabled_in_world,enabled_in_hand"
		kill_when_finished="0"
		from_material_tag="[sand_ground]"
		steps_per_frame="2"
		to_material="liquid_fire"
		clean_stains="0"
		is_circle="1"
		radius="72" 
		loop="1"
		>
	</MagicConvertMaterialComponent>
	
	<MagicConvertMaterialComponent
		_tags="enabled_in_world,enabled_in_hand"
		kill_when_finished="0"
		from_material_tag="[sand_other]"
		steps_per_frame="2"
		to_material="liquid_fire"
		clean_stains="0"
		is_circle="1"
		radius="72" 
		loop="1"
		>
	</MagicConvertMaterialComponent>
	
	<MagicConvertMaterialComponent
		_tags="enabled_in_world,enabled_in_hand"
		kill_when_finished="0"
		ignite_materials="1"
		steps_per_frame="2"
		fan_the_flames="1"
		clean_stains="0"
		is_circle="1"
		radius="72" 
		loop="1"
		>
	</MagicConvertMaterialComponent>
	
	<ParticleEmitterComponent 
		_tags="enabled_in_world,enabled_in_hand"
		emitted_material_name="spark"
		fade_based_on_lifetime="1"
		x_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_min="0"
		y_pos_offset_max="0"
		x_vel_min="-20"
		x_vel_max="20"
		y_vel_min="-20"
		y_vel_max="20"
		area_circle_radius.min="5"
		area_circle_radius.max="12"
		velocity_always_away_from_center="40"
		gravity.y="0"
		friction="0.1"
		airflow_force="0.9"
		airflow_time="0.101"
		airflow_scale="0.81"
		count_min="1"
		count_max="4"
		lifetime_min="1.0"
		lifetime_max="5.0"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		draw_as_long="1"
		collide_with_grid="1"
		render_on_grid="1"
		emission_interval_min_frames="2"
		emission_interval_max_frames="5"
		render_ultrabright="1"
		is_emitting="1" >
	</ParticleEmitterComponent>
	
	<MaterialAreaCheckerComponent
		_tags="enabled_in_world,enabled_in_hand"
		area_aabb.min_x="-24" 
		area_aabb.max_x="24" 
		area_aabb.min_y="-24"		
		area_aabb.max_y="24"	
		update_every_x_frame="36"
		material="lava"
		material2="lava"
		kill_after_message="0"
		>
	</MaterialAreaCheckerComponent>
	
	<LuaComponent
		_tags="enabled_in_world,enabled_in_hand"
		script_source_file="data/scripts/buildings/sun/spot_2.lua"
		execute_every_n_frame="10"
		>
	</LuaComponent>
	
	<CameraBoundComponent
	  max_count="5"
	  distance="2000">
	</CameraBoundComponent>
</Entity>
