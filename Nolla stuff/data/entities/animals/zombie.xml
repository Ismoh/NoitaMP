			attack_melee_damage_max="0.4"
			attack_dash_enabled="1"
			creature_detection_range_x="250"
			creature_detection_range_y="250"
			food_material="meat"
			needs_food="1"
			sense_creatures="1"
			attack_ranged_enabled="0"
			can_fly="0"  
