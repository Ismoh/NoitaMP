			run_velocity="18"
			run_animation_velocity_switching_enabled="1"
			run_animation_velocity_switching_threshold="50" >
		</CharacterPlatformingComponent>
		
		<HitboxComponent 
			_enabled="1" 
			aabb_min_x="-4.5" 
			aabb_max_x="4.5" 
			aabb_min_y="-6.5" 
			aabb_max_y="3" 
			is_enemy="1" 
			is_item="0" 
			is_player="0" >
		</HitboxComponent>

		<CameraBoundComponent
		  max_count="20"
		  distance="160000">
		</CameraBoundComponent>
