	<AudioComponent
		file="data/audio/Desktop/animals.bank"
		event_root="animals/zombie" >
	</AudioComponent>

	<SpriteComponent 
        _tags="character" 
		alpha="1" 
		image_file="data/enemies_gfx/zombie_emissive.xml"
		emissive="1"
        additive="1"
		rect_animation="walk" >
